{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    "noUnusedParameters": false,
    "importHelpers": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useTranspileModule": true,
    "useCache": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.ngfactory.ts"
  ]
}
